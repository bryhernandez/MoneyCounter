<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textAlignment="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Money Counter"
                android:textAlignment="center"
                android:textSize="40sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.00"
                android:textAlignment="center"
                android:textColor="@android:color/holo_green_light"
                android:textSize="30sp"
                android:id="@+id/money_total"/>

            <!--Coin Counter starts here-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coins: "
                android:textSize="25sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1¢"
                android:textSize="20sp"
                android:onClick="addPenny"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5¢"
                android:textSize="20sp"
                android:onClick="addNickel"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10¢"
                android:textSize="20sp"
                android:onClick="addDime"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25¢"
                android:textSize="20sp"
                android:onClick="addQuarter"/>

            <!--Cash Counter starts here-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cash: "
                android:textSize="25sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$1"
                android:textSize="20sp"
                android:onClick="addOne"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$2"
                android:textSize="20sp"
                android:onClick="addTwo"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$5"
                android:textSize="20sp"
                android:onClick="addFive"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$10"
                android:textSize="20sp"
                android:onClick="addTen"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$20"
                android:textSize="20sp"
                android:onClick="addTwenty"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$50"
                android:textSize="20sp"
                android:onClick="addFifty"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$100"
                android:textSize="20sp"
                android:onClick="addHundred"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/calc_button"
                    android:text="Calculate"
                    android:textSize="30sp"
                    android:onClick="displayTotal"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/calc_button"
                    android:text="Reset"
                    android:textSize="30sp"
                    android:onClick="reset"/>

            </RelativeLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/summary"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>